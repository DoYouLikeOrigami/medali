include ../_blocks/_mixins
doctype html
html(lang="ru")
	include ../_blocks/_head
		title Название работы

	body
		.container
			section.work-description
				.work-description__img.work-description__img--main
					img(src="./static/img/portfolio-section/main/redline.png" alt="")
				header.work-description__header
					| Заголовок презентации работы
				p.work-description__text
					| Текст описания работы
				p.work-description__text
					a.btn.btn--special.btn--mobile-only.btn--big(href="./") Вернуться на главную
				.work-description__img
					img(src="./static/img/portfolio-section/big/redline.png" alt="")
				.work-description__btns
					a.btn.btn--main.btn--big(href="#") Перейти на сайт
					a.btn.btn--special.btn--mobile-only.btn--big(href="./") Вернуться на главную

			aside.work-aside
				.work-aside__img
					img(src="./static/img/portfolio-section/small/redline.png" alt="")
				.work-aside__descr
					header.work-aside__header
						| Заголовок работы
					p.work-aside__descr-item
						b Поставленная задача:
						| Описание поставленной задачи
					a.btn.btn--special.btn--big(href="/") Вернуться на главную

			link(rel="stylesheet", href="./static/css/sweetalert2.min.css")
			script(src="./static/js/sweetalert2.min.js")
			script(src="./static/js/main.js")
			script(src="./static/js/piwik.js")
